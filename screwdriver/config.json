{
    "version": 3,
    "shared": {
        "notification_email": "no-reply@yahoo-inc.com",
        "notify_developers": false,
        "test_results_type": "tap",
        "build": {
            "init": {
                "task": "init",
                "npm_install_excludes": ["*/**/package.json"],
                "before": [{
                    "task": "script",
                    "command": "ynpm install"
                }]
            },
            "lint": {
                "task": "none"
            },
            "test": {
                "task": "ynpm run-script test-ci",
                "name": "Unit Tests",
                "after": [
                    {
                        "task": "script",
                        "command": "report-coverage"
                    }
                ]
            },
            "docs": {
                "task": "none"
            },
            "publish": {
                "task": "none"
            },
            "deploy": {
                "task": "none"
            }
        }
    },
    "jobs": {
        "pull-request": {},
        "component": {
            "order": ["init", "lint", "test"]
        }
    }
}
